<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    android:padding="15dp">

    <TextView
        android:id="@+id/myname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="14dp"
        android:text="@string/myname30"
        android:textColor="@color/black"
        android:textSize="@dimen/titlesize"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/biker_re_lLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/button_blue1"
        android:orientation="horizontal">

        <biker.life.CircleImgView
            android:id="@+id/circleImgView3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            app:srcCompat="@android:mipmap/sym_def_app_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/reward_t001"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="@dimen/margin"
                    android:text="@string/reward_t001"
                    android:textColor="@color/black"
                    android:textSize="@dimen/titlesize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/reward_name"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginTop="@dimen/margin"
                    android:text="@string/reward_loading"
                    android:textColor="@color/black"
                    android:textSize="@dimen/titlesize" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/reward_t002"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="@string/reward_t002"
                    android:textColor="@color/black"
                    android:textSize="@dimen/titlesize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/reward_designation"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="@dimen/margin"
                    android:text="@string/reward_loading"
                    android:textColor="@color/black"
                    android:textSize="@dimen/titlesize" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/reward_t003"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="@string/reward_t003"
                    android:textColor="@color/black"
                    android:textSize="@dimen/titlesize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/reward_schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="@dimen/margin"
                    android:text="0/0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/titlesize" />
            </TableRow>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/reward_Change"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/biker_re_lLayout2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="214dp"
        android:layout_marginTop="15dp"
        android:background="@color/btn_ok"
        android:gravity="center"
        android:text="@string/reward_change"
        android:textColor="@color/white"
        android:textSize="@dimen/titlesize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/reward_t004"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/biker_re_lLayout1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_ring_with_solid"
        android:gravity="center"
        android:text="@string/rewardtext11"
        android:textColor="@color/black"
        android:textSize="@dimen/titlesize" />

    <LinearLayout
        android:id="@+id/biker_re_lLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reward_t004"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_whiteline"
        android:orientation="vertical">

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/button_green1" />

    </LinearLayout>

    <TextView
        android:id="@+id/rewardanim"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/biker_re_lLayout2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="176dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/join_icon_trophy"
        android:backgroundTint="@color/black" />

</RelativeLayout>