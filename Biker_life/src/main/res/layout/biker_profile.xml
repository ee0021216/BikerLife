<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_r01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    android:padding="@dimen/padding"
    tools:context=".Biker_profile">

    <biker.life.CircleImgView
        android:id="@+id/circleImgView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/hare" />

    <TextView
        android:id="@+id/profile_t002"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/circleImgView"
        android:background="@color/white"
        android:text="@string/profile_t002"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize" />

    <Spinner
        android:id="@+id/profile_a01"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_below="@+id/circleImgView"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/profile_t005"
        android:entries="@array/profile_a01"
        android:gravity="center"
        android:prompt="@string/profile_t003"
        android:spinnerMode="dropdown"
        android:text="@string/profile_t003"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/profile_t016"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_below="@+id/circleImgView"
        android:layout_marginStart="100dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/profile_t055"
        android:background="@color/btn_ok"
        android:gravity="center"
        android:text="@string/profile_t016"
        android:textColor="@color/white"
        android:textSize="@dimen/titlesize"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/profile_t004"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/profile_t002"
        android:background="@drawable/ic_edit_profile"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize"
        android:visibility="gone" />

    <TextView
        android:id="@+id/profile_t055"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/circleImgView"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/profile_a01"
        android:background="@drawable/ic_eye_profile"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/profile_t005"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_below="@+id/circleImgView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="3dp"
        android:background="@color/btn_ok"
        android:gravity="center"
        android:text="@string/profile_t005"
        android:textColor="@color/white"
        android:textSize="@dimen/titlesize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profile_t006"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_a01"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:text="@string/profile_t006"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/profile_t43"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/profile_t016"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:background="@color/btn_ok"
        android:gravity="center"
        android:text="@string/profile_t007"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profile_t32"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/profile_t005"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/profile_t43"
        android:background="@color/btn_ok"
        android:gravity="center"
        android:text="@string/profile_t013"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize16"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/profile_t37"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/profile_t43"
        android:layout_marginTop="3dp"
        android:background="@drawable/button_blue1"
        android:gravity="center"
        android:text="@string/profile_t007"
        android:textColor="@color/black"
        android:textSize="@dimen/titlesize"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/profile_t31"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/profile_ta01"
        android:layout_marginTop="3dp"
        android:background="@drawable/button_blue1"
        android:gravity="center"
        android:text="@string/profile_t013"
        android:textColor="@color/black"
        android:textSize="@dimen/titlesize"
        android:textStyle="bold"
        android:visibility="invisible" />

    <ListView
        android:id="@+id/record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_t37"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/button_green1" />

    <TableRow
        android:id="@+id/profile_ta01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_t43"
        android:layout_marginTop="0dp"
        android:visibility="invisible">

        <biker.life.CircleImgView
            android:id="@+id/circleImgView2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/hare" />

        <TextView
            android:id="@+id/profile_t28"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:background="@drawable/ic_add_profile"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize" />

        <TextView
            android:id="@+id/profile_t8"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/profile_t049"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize" />

        <TextView
            android:id="@+id/profile_t29"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:background="@drawable/ic_delete_profile"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize" />

    </TableRow>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/follow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_t31"
        android:layout_marginTop="0dp"
        android:visibility="invisible" />

</RelativeLayout>