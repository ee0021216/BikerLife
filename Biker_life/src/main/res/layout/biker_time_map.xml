        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/time_map_txtLat_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_map_goal"
        android:layout_marginStart="10dp"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="10dp"
        android:alpha="0.8"

        android:background="@drawable/bg_edt_selector"
        android:padding="10dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:text="出發點緯度"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="24sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/time_map_txtLat_goal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_map_txtLong_start"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:alpha="0.8"

        android:background="@drawable/bg_edt_selector"
        android:padding="10dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:text="目的地緯度"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="24sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/time_map_txtLong_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_map_txtLat_start"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:alpha="0.8"

        android:background="@drawable/bg_edt_selector"
        android:padding="10dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:text="出發點經度"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="24sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/time_map_txtLong_goal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_map_txtLat_goal"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
