    <AutoCompleteTextView
        android:id="@+id/time_map_goal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_map_start"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:alpha="0.8"
        android:background="@drawable/bg_edt_selector_map"
        android:hint="@string/biker_map_goal"

        android:padding="10dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/teal_700"
        android:textColorHint="@color/Gray"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/time_map_lblOutput"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_map_goal"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_color"
        android:textColor="@color/Teal"
        android:alpha="0.5"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/time_map_lblOutput2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
