<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:elevation="1dp"
    android:orientation="vertical"
    android:paddingStart="@dimen/padding"
    android:paddingEnd="@dimen/padding">

    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/home_m2206_name"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/Gray"
        android:contentDescription="@string/home_img"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/background_color" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="圖片描述:"
            android:textColor="#6D4301"
            android:textSize="@dimen/textsize14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Picdescribe1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="圖片描述"
            android:textColor="@color/black" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址:"
            android:textColor="#6D4301"
            android:textSize="@dimen/textsize14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Zipcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/home_Zipcode"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/Addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="5dp"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="5"
            android:text="@string/home_m2206_add"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="電話:"
            android:textColor="#6D4301"
            android:textSize="@dimen/textsize14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="電話"
            android:textColor="@color/black" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="票價訊息:"
            android:textColor="#6D4301"
            android:textSize="@dimen/textsize14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Ticketinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="票價訊息"
            android:textColor="@color/black" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="開放時間:"
            android:textColor="#6D4301"
            android:textSize="@dimen/textsize14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Opentime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="開放時間"
            android:textColor="@color/black" />
    </TableRow>

    <TextView
        android:id="@+id/Content"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:text="@string/home_m2206_descr"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/padding"
        android:background="@color/Silver" />

</LinearLayout>