<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/time_stopwatch_background_color"
    android:orientation="vertical"
    android:padding="@dimen/padding"
    android:keepScreenOn="true"
    tools:context="biker.life.Biker_time_Stopwatch">

    <LinearLayout
        android:id="@+id/LLyt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableRow
            android:id="@+id/TR1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/button_green1"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/timing_text"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/button_blue1"
                    android:gravity="center"
                    android:text="@string/stopwatch_timing_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize" />

                <TextView
                    android:id="@+id/timing"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="@string/stopwatch_timezero"
                    android:textColor="@color/black"
                    android:textSize="@dimen/titlesize" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ridingtime_text"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/button_blue1"
                    android:gravity="center"
                    android:text="@string/stopwatch_ridingtime_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize" />

                <TextView
                    android:id="@+id/ridingtiming"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="@string/stopwatch_timezero"
                    android:textColor="@color/black"
                    android:textSize="@dimen/titlesize" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:id="@+id/TR2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="@dimen/pa10"
            android:background="@drawable/button_greennoframe"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/distance_text"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/button_blue1"
                    android:gravity="center"
                    android:text="@string/stopwatch_distance_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/distanceSum"
                        android:layout_width="135dp"
                        android:layout_height="30dp"
                        android:gravity="center|right"
                        android:text="@string/stopwatch_distance"
                        android:textColor="@color/black"
                        android:textSize="@dimen/titlesize" />
                </TableRow>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <DatePicker
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/XX"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="XX"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/XXXX"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="XXXX"
                    android:textColor="@color/black"
                    android:textSize="@dimen/titlesize"
                    android:visibility="gone" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:id="@+id/TR3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="@dimen/pa10"
            android:background="@drawable/button_greennoframe"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/uphill_text"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/button_blue1"
                    android:gravity="center"
                    android:text="@string/stopwatch_uphill_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize" />

                <TextView
                    android:id="@+id/uphillSum"
                    android:layout_width="135dp"
                    android:layout_height="30dp"
                    android:gravity="end"
                    android:text="@string/stopwatch_distance"
                    android:textColor="@color/black"
                    android:textSize="@dimen/titlesize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/downhill_text"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/button_blue1"
                    android:gravity="center"
                    android:text="@string/stopwatch_downhill_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize" />

                <TextView
                    android:id="@+id/downhillSum"
                    android:layout_width="135dp"
                    android:layout_height="30dp"
                    android:gravity="end"
                    android:text="@string/stopwatch_distance"
                    android:textColor="@color/black"
                    android:textSize="@dimen/titlesize" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:id="@+id/TR4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="@dimen/pa10"
            android:background="@drawable/button_greennoframe"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/altitudeUp_text"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/button_blue1"
                    android:gravity="center"
                    android:text="@string/stopwatch_climbHeight_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize" />

                <TextView
                    android:id="@+id/altitudeUp"
                    android:layout_width="125dp"
                    android:layout_height="30dp"
                    android:gravity="right"
                    android:text="@string/stopwatch_zerometers"
                    android:textColor="@color/black"
                    android:textSize="@dimen/titlesize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/altitudeDown_text"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/button_blue1"
                    android:gravity="center"
                    android:text="@string/stopwatch_altitudeDown_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize" />

                <TextView
                    android:id="@+id/altitudeDown"
                    android:layout_width="125dp"
                    android:layout_height="30dp"
                    android:gravity="right"
                    android:text="@string/stopwatch_zerometers"
                    android:textColor="@color/black"
                    android:textSize="@dimen/titlesize" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:id="@+id/TR5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="@dimen/pa10"
            android:background="@drawable/button_greennoframe"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/avgSpeed_text"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/button_blue1"
                    android:gravity="center"
                    android:text="平均速度"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize" />

                <TextView
                    android:id="@+id/avgSpeed"
                    android:layout_width="153dp"
                    android:layout_height="30dp"
                    android:gravity="center|right|center_horizontal"
                    android:text="@string/stopwatch_zero_hkm"
                    android:textColor="@color/black"
                    android:textSize="@dimen/titlesize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fastestSpeed_text"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/button_blue1"
                    android:gravity="center"
                    android:text="最快速度"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize" />

                <TextView
                    android:id="@+id/fastestSpeed"
                    android:layout_width="153dp"
                    android:layout_height="30dp"
                    android:gravity="right"
                    android:text="@string/stopwatch_zero_hkm"
                    android:textColor="@color/black"
                    android:textSize="@dimen/titlesize" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:id="@+id/TR6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="@dimen/pa10"
            android:background="@drawable/button_greennoframe"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/startTime_text"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/button_blue1"
                    android:gravity="center"
                    android:text="@string/stopwatch_startTime_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize" />

                <TextView
                    android:id="@+id/startTime"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="@string/stopwatch_timezero"
                    android:textColor="@color/black"
                    android:textSize="@dimen/titlesize" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/endTime_text"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/button_blue1"
                    android:gravity="center"
                    android:text="@string/stopwatch_endTime_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize" />

                <TextView
                    android:id="@+id/endTime"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="@string/stopwatch_timezero"
                    android:textColor="@color/black"
                    android:textSize="@dimen/titlesize" />

            </LinearLayout>

        </TableRow>

        <TextView
            android:id="@+id/prompt_pause"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/time_stopwatch_bg_btn_selector"
            android:gravity="center"
            android:text="@string/stopwatch_prompt_pause"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize"
            android:textStyle="bold"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnupmysqlLY"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/upmysql"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/time_stopwatch_bg_btn_selector"
            android:text="再次嘗試"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnfrmLy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@color/btn_ok"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/goHome"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/time_stopwatch_backhome"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/btn_ok"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/start"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/time_stopwatch_start"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/complete"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/time_stopwatch_stop"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@color/btn_ok"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/goMap"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center|right"
                android:background="@drawable/time_stopwatch_gomap"
                android:backgroundTint="@color/white"
                android:gravity="center|right"
                android:textColor="@color/black"
                android:textSize="24sp" />
        </LinearLayout>

    </LinearLayout>

    <TableRow
        android:id="@+id/TR8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/lblOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start|top"
            android:text="TextView"
            android:visibility="gone" />

        <TextView
            android:id="@+id/route_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|left"
            android:text="TextView"
            android:visibility="gone" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:text="Button"
            android:visibility="gone" />
    </TableRow>

    <TextView
        android:id="@+id/myname_29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LLyt1"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="29陳亮瑜"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:visibility="invisible" />

    <FrameLayout
        android:id="@+id/gosettinLy"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@drawable/button_blue1"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:background="@drawable/button_blue1"
            android:gravity="center|top"
            android:text="@string/stopwatch_noGps"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize" />

        <TextView
            android:id="@+id/gosetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="143dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_green1"
            android:gravity="center"
            android:text="@string/stopwatch_btnsetGPS"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize" />
    </FrameLayout>

    <Button
        android:id="@+id/testdelbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnupmysqlLY"
        android:layout_marginStart="41dp"
        android:layout_marginBottom="7dp"
        android:layout_toEndOf="@+id/testupdatebtn"
        android:text="我是測試刪除按鈕"
        android:visibility="gone" />

    <Button
        android:id="@+id/testupdatebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnupmysqlLY"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="5dp"
        android:text="我是測試更新按鈕"
        android:visibility="gone" />


</RelativeLayout>